<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:key="pref_key_storage_settings_colors"
        android:title="@string/setting_colors">
        <yuku.ambilwarna.widget.AmbilWarnaPreference
            android:defaultValue="0xffffffff"
            android:key="background_preference_key"
            android:title="@string/setting_background"
            android:summary="@string/setting_color_value"
            app:supportsAlpha="true" />

        <yuku.ambilwarna.widget.AmbilWarnaPreference
            android:defaultValue="0xff0000ff"
            android:key="ball_preference_key"
            android:title="@string/setting_ball"
            app:supportsAlpha="true" />
    </PreferenceCategory>
    <PreferenceCategory android:key="pref_key_storage_settings_colors">
        <ListPreference android:title="@string/setting_preset"
            android:summary="@string/setting_preset_3d"
            android:key="preset_preference_key"
            android:defaultValue="@string/setting_preset_3d"
            android:entries="@array/list_presets"
            android:entryValues="@array/list_presets" />
        <CheckBoxPreference android:title="@string/setting_sound"
            android:defaultValue="true"
            android:summary="@string/setting_sound_on"
            android:key="sound_preference_key" />
        <Preference android:title="@string/setting_default"
            android:key="default_preference_key"></Preference>
    </PreferenceCategory>

</PreferenceScreen>